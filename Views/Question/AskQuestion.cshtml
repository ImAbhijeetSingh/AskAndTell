
@model AskAndTell.Models.Question
@{
    ViewBag.Title = "AskQuestion";
}
@*<link href="~" />*@
<h2>AskQuestion</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <hr />
    <h3>Title</h3>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(m => m.Title)
        </div>
    </div>

    <h3>Body</h3>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Body)
        </div>
    </div>

    <h3>Select 3 Tags</h3>
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("TagId1", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("TagId2", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("TagId3", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>      
}